[init]
  templatedir = ~/.git_template
[push]
  default = current
[color]
  ui = auto
[date]
  relative
[merge]
  ff = only
[commit]
  template = ~/.gitmessage
[fetch]
  prune = true
[rebase]
  autosquash = true
[include]
  path = ~/.gitconfig.local
  path = ~/.gitconfig.extras
[diff]
  colorMoved = zebra
[pretty]
  colored = format:%Cred%h%Creset %s %Cgreen(%cr) %C(bold gray)%an%Creset
[user]
  name = Anthony Kirwan
  email = akirwan@groupon.com
